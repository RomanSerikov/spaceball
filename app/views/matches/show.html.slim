w.row
  .col-md-4
    h2 #{@match.start_date}
    h2 #{@match.start_time.try(:strftime, "%H:%M")}
    h2 #{@match.title}

    - if can_score?(current_user, @match)
      = render "goals_form", game: @match
      br

    - if @match.finished?
      h3 #{@match.team_a_goals} : #{@match.team_b_goals}
    - else
      p Match haven't played yet.
      
    .control-links
      p = link_to "Back to matches list", tournament_matches_path(@match.tournament)
